<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.pablisco.flattableball.MainActivity"
    android:gravity="center">

    <Button
        style="@style/Widget.Button.Intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/choose_button_blue"
        android:onClick="chooseBlue"/>

    <Button
        style="@style/Widget.Button.Intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:text="@string/choose_button_red"
        android:onClick="chooseRed"/>

</LinearLayout>
